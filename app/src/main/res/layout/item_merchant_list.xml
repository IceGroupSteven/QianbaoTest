<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background">

    <View
        android:id="@+id/view_separator"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cardview_light_background"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y240"
        android:layout_below="@+id/view_separator"
        android:layout_marginTop="1px"
        android:background="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/merchant_pictures_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/imageview1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/tv_discount_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="7dp"
                    android:paddingTop="3dp"
                    android:text="全单打折"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_merchantname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/merchant_pictures_rl"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="钱包生活"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_merchantname"
                android:layout_alignTop="@+id/tv_merchantname"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_merchantname"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/tv_fenlei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_merchantname"
                android:layout_below="@+id/tv_merchantname"
                android:layout_marginBottom="-3dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingBottom="1dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:text="adfsdf"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_fenlei"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_fenlei"
                android:ellipsize="end"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:text="人均60元"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_fenlei"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/merchant_pictures_rl"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shangquan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:drawablePadding="3dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="bbbb"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_fan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="kslfjls"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_refundnote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/merchant_pictures_rl"
                android:drawablePadding="5dp"
                android:enabled="true"
                android:maxEms="1"
                android:singleLine="true"
                android:text="米饭免费"
                android:textColor="@color/colorAccent"
                android:textSize="11sp" />

        </RelativeLayout>

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:background="@color/c_eaeaea" />-->

        <ImageView
            android:id="@+id/img_preferential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>